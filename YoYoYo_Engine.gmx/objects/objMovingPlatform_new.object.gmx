            <string>//TODO: upside down

//TODO: there's a strange interaction with very fast moving platforms moving downward at a speed higher than the player's max fall speed where the player can't latch on
//TODO: there's a bug with fast fall speeds and bouncing platforms (set player max vspeed to 50 check the right-most platform)

//TODO: the player slides around every once in a while on the path platform

if (instance_exists(objPlayer)) {
    var dX = x - xprevious;
    var dY = y - yprevious;
    
    var yOffset = 9;
    
    //we're on the platform if we're above/even with the platform or about to rise into it, so check both
    var abovePlatform = false;
    var risingIn = false;
    
    var checkThreshold = 2; //TODO: maybe 2 is unnecessary, should probably be 1
    
    with (instance_place(x,y-(checkThreshold*global.grav),objPlayer)) {      
        //player was standing above the platform last frame or is currently over it
        if (global.grav == 1) {
            abovePlatform = (yprevious &lt;= other.yprevious - yOffset);
        } else {
            abovePlatform = (yprevious + 1 &gt;= other.yprevious + (other.sprite_height - 1 + yOffset));   //yprevious + 1 is a bandaid fix, dunno what's going on
        }
        
        show_debug_message("abovePlatform = " + string(abovePlatform));
    }
    
    //turns out xprevious/yprevious might be necessary for platforms that turn around quickly
    with (instance_place(xprevious,yprevious-(checkThreshold*global.grav),objPlayer)) {
        //player was standing above the platform last frame or is currently over it
        if (global.grav == 1) {
            if (yprevious &lt;= other.yprevious - yOffset)
                abovePlatform = true;
        } else {
            if (yprevious + 1 &gt;= other.yprevious + (other.sprite_height - 1 + yOffset)) //yprevious + 1 is a bandaid fix, dunno what's going on
                abovePlatform = true;
        }
        
        show_debug_message("abovePlatform = " + string(abovePlatform));
    }
    
    //TODO: figure out what the bounds of the rectangle should actually be (also maybe we should be using xprevious/yprevious)
    var vertThreshold = 20;
    with (collision_rectangle(x,y-vertThreshold,x+sprite_width-1,y+sprite_height-1+vertThreshold,objPlayer,false,true)) {
        //player was previously below the platform and is now above it
        if (global.grav == 1) {
            risingIn = (yprevious &gt; other.yprevious - yOffset &amp;&amp; y &lt;= other.y - yOffset);
        } else {
            risingIn = (yprevious &lt; other.yprevious + (other.sprite_height - 1 + yOffset) &amp;&amp; y &gt;= other.y + (other.sprite_height - 1 + yOffset));
        }
        
        show_debug_message("risingIn = " + string(risingIn));
        
        /*
        show_debug_message("yprevious = " + string(yprevious));
        show_debug_message("other.yprevious = " + string(other.yprevious));
        show_debug_message("fdsa = " + string(other.yprevious + (other.sprite_height - 1 + yOffset)));
        show_debug_message("y = " + string(y));
        show_debug_message("other.y = " + string(other.y));
        show_debug_message("asdf = " + string(other.y + (other.sprite_height - 1 + yOffset)));
        */
    }
    
    if (abovePlatform || risingIn) {
        show_debug_message("we in there");
        
        with (objPlayer) {
            if (global.grav == 1) {
                if (place_free(x,other.y-yOffset)) {
                    y = other.y - yOffset;
                }
            } else {
                if (place_free(x,other.y+(other.sprite_height - 1 + yOffset))) {
                    y = other.y + (other.sprite_height - 1 + yOffset);
                }
            }
            if (place_free(x+dX,y)) {
                x += dX;
            }
            
            //only affects player speed when the platform moves down
            if (global.grav == 1) {
                vspeed = max(dY,0);
            } else {
                vspeed = min(dY,0);
            }
            
            show_debug_message("new vspeed = " + string(vspeed));
            
            djump = 1;
            onPlatform = true;
        }
    } else {
        show_debug_message("zzz");
    }
}

if (bounce) {
    move_bounce_solid(false);
    
    /*
    if (!place_free(x,y+vspeed)) {
        vspeed*=-1;
    }
    if (!place_free(x+hspeed,y)) {
        hspeed*=-1;
    }
    */
}
</string>
