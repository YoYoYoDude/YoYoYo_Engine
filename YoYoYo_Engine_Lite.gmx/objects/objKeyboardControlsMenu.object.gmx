            <string>//animate player sprite
playerIndex = (playerIndex + 1/5) mod 4;

if (!settingKey)
{
    if (keyboard_check_pressed(global.menuUpButton))
    {
        audio_play_sound(global.menuSound,0,false);
        select -= 1;
        if(select &lt; 1)
            select = 11;
    }
    else if (keyboard_check_pressed(global.menuDownButton))
    {
        audio_play_sound(global.menuSound,0,false);
        select += 1;
        if(select &gt; 11)
            select = 1;
    }
    else if (keyboard_check_pressed(global.menuBackButton))
    {
        scrSaveConfig();    //save changes
        instance_create(x,y,objOptionsMenu);
        instance_destroy();
    }
    else if (keyboard_check_pressed(global.menuAcceptButton))
    {
        if (select != 11)
        {
            settingKey = true;
        }
        else
        {
            //default controls
            global.leftButton = vk_left;
            global.rightButton = vk_right;
            global.upButton = vk_up;
            global.downButton = vk_down;
            global.jumpButton = vk_shift;
            global.shootButton = ord("Z");
            global.restartButton = ord("R");
            global.skipButton = ord("S");
            global.suicideButton = ord("Q");
            global.pauseButton = ord("P");
            
            resetPrompt = true;
            alarm[0] = 60;
        }
    }
}
else
{
    if (keyboard_check_pressed(vk_anykey))  //check if a key is being pressed and if it is, store that key
    {
        var keyChange;
        
        keyChange = keyboard_key;
        
        if (keyChange == 160 || keyChange == 161)   //check if current key pressed is either shift key
            keyChange = 16; //set it to work for both shift keys
        
        if (select == 1) {global.leftButton = keyChange;}
        else if (select == 2) {global.rightButton = keyChange;}
        else if (select == 3) {global.upButton = keyChange;}
        else if (select == 4) {global.downButton = keyChange;}
        else if (select == 5) {global.jumpButton = keyChange;}
        else if (select == 6) {global.shootButton = keyChange;}
        else if (select == 7) {global.restartButton = keyChange;}
        else if (select == 8) {global.skipButton = keyChange;}
        else if (select == 9) {global.suicideButton = keyChange;}
        else if (select == 10) {global.pauseButton = keyChange;}
        
        settingKey = false;
    }
}

